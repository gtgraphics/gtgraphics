%p#notice= notice

%p
  %b Title:
  = @page.title
%p
  %b Slug:
  = @page.slug
- if @page.parent
  %p
    %b Parent:
    = link_to @page.parent, @page.parent
%p
  %b Path:
  = link_to @page.path, "/#{@page.path}"
%p
  %b Content:
  = @page.content

%h2 Parent Pages
%ul
  - @page.ancestors.each do |ancestor|
    %li= link_to ancestor, "/#{ancestor.path}"

%h2 Sub Pages
= render 'table', pages: @sub_pages

= link_to 'Edit', edit_page_path(@page)
\|
= link_to 'Back', pages_path
