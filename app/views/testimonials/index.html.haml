%h1 Listing testimonials

%table
  %tr
    %th Name
    %th Slug
    %th Description
    %th Launched on
    %th Client name
    %th Url
    %th
    %th
    %th

  - @testimonials.each do |testimonial|
    %tr
      %td= testimonial.name
      %td= testimonial.slug
      %td= testimonial.description
      %td= testimonial.launched_on
      %td= testimonial.client_name
      %td= testimonial.url
      %td= link_to 'Show', testimonial
      %td= link_to 'Edit', edit_testimonial_path(testimonial)
      %td= link_to 'Destroy', testimonial, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Testimonial', new_testimonial_path
