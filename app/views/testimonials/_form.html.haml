= form_for @testimonial do |f|
  - if @testimonial.errors.any?
    #error_explanation
      %h2= "#{pluralize(@testimonial.errors.count, "error")} prohibited this testimonial from being saved:"
      %ul
        - @testimonial.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :launched_on
    = f.date_select :launched_on
  .field
    = f.label :client_name
    = f.text_field :client_name
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
