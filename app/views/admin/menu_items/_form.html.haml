= simple_form_for [:admin, @menu_item], html: { class: 'form-horizontal' } do |form|

  = render 'translation_tabs', url: translation_fields_admin_menu_items_path

  .tab-content#translations
    = form.simple_fields_for :translations do |translation_fields|
      = render 'translation_fields', fields: translation_fields

  %fieldset
    %legend= MenuItem.human_attribute_name :target
    .fields
      = form.input :target_type, collection: MenuItem.target_types.map { |target_type| [target_type.constantize.model_name.human, target_type] }.sort_by(&:first), label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }, input_html: { data: { url: record_type_fields_admin_menu_items_path } }
      #record_type_fields
        /= render 'record_type_fields', fields: form

  %fieldset
    %legend= translate('views.forms.settings')
    .fields
      = form.input :new_window, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }

  .form-group
    .col-lg-offset-2.col-lg-10
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), :admin_menu_items