- if @image_styles.any?
  %table.table.table-striped
    %thead
      %tr
        %th= Image::Style.human_attribute_name :label
        %th.actions
    %tbody
      - @image_styles.each do |image_style|
        %tr
          %td= image_style.label
          %td.actions
            = action_buttons_for image_style, parent: @image, except: :show, size: :mini, icon_only: true
- else
  .well.text-center
    %h4= translate('views.hints.empty', model: Image::Style.model_name.human(count: 2))