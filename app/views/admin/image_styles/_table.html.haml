- if @image_styles.any?
  %table.table.table-striped
    %tbody
      - @image_styles.each do |image_style|
        %tr
          %td= link_to image_style.dimensions, image_style.asset_url
          %td.actions
            .btn-toolbar
              = view_button_link_for image_style, url: image_style.asset_url, size: :mini, icon_only: true
              = update_button_link_for image_style, url: edit_admin_image_style_path(@image, image_style), size: :mini, icon_only: true
              = destroy_button_link_for image_style, url: admin_image_style_path(@image, image_style), size: :mini, icon_only: true
            /= action_buttons_for image_style, parent: @image, except: :show, size: :mini, icon_only: true
- else
  .well.text-center
    %h4= translate('views.hints.empty', model: Image::Style.model_name.human(count: 2))