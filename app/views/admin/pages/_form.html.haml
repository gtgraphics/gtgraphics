= simple_form_for [:admin, @page], html: { class: 'form-horizontal' } do |form|

  .fields
    = form.association :parent, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }, input_html: { rows: 4 }
    = form.input :slug, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }
    = form.input :template, collection: Page.templates, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }

  = form.simple_fields_for :translations do |translation_fields|
    %fieldset
      %legend= translation_fields.object.locale
      .fields
        = translation_fields.input :locale, as: :hidden
        = translation_fields.input :title, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }
        = translation_fields.input :content, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }, input_html: { rows: 6 }

  .form-group
    .col-lg-offset-2.col-lg-10
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), :admin_shouts