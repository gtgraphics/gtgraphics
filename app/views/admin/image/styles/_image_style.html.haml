- present image_style, with: Admin::Image::StylePresenter do |image_style|
  = content_tag_for :tr, image_style do
    - if local_assigns.fetch(:checkboxes, true)
      %td.checkbox-cell
        = check_box_tag 'image_style_ids[]', image_style.id, false, class: 'table-checkbox', id: nil, data: { behavior: 'tableCheckbox' }
    %td.thumbnail-cell
      = link_to attached_asset_path(image_style, :public), target: '_blank' do
        = image_tag attached_asset_path(image_style, :thumbnail), class: 'img-circle', alt: image_style.title, width: 45, height: 45
    %td
      = link_to image_style.title, attached_asset_path(image_style, :public), target: '_blank'
      %br
      %span.text-muted.ignored
        = image_style.dimensions
    %td.actions
      = image_style.action_buttons remote: true, icon_only: true
