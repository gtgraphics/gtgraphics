= simple_form_for @image_style, url: customize_admin_image_style_path(@image, @image_style), remote: true, html: { class: 'form-horizontal' } do |form|
  
  .modal-body
    = render 'admin/images/manipulator', fields: form

  .modal-footer
    = form.button :button, type: 'submit', class: 'btn-primary' do
      = prepend_icon :save, translate('helpers.links.save')
    = button_tag translate('helpers.links.close'), type: 'button', class: 'btn btn-default', data: { dismiss: 'modal' }