= semantic_form_for [:admin, @album], html: { class: 'form-horizontal' } do |form|

  = form.inputs do
    = form.input :title

  = form.actions do
    = form.action :submit, button_html: { class: 'btn btn-primary' }
    = form.action :cancel, url: @album.persisted? ? [:admin, @album] : :admin_albums, button_html: { class: 'btn' }