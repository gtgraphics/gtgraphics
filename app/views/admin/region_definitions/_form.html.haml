= simple_form_for [:admin, @template.becomes(::Template), @region_definition], html: { class: 'form-horizontal' } do |form|

  = form.input :label, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }

  .form-group
    .col-lg-offset-2.col-lg-10
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), admin_template_path(@template)