= simple_form_for @project, url: :admin_page_project, wrappers: :horizontal_form, html: { class: 'form-horizontal', multipart: true } do |form|

  %fieldset
    %legend= Page::Project.model_name.human
    .fields
      = form.input :name
      = form.input :description, input_html: { class: 'editor', rows: 10 }
      = form.input :released_on

  %fieldset
    %legend= Page::Project.model_name.human
    .fields
      = form.input :client_name
      = form.input :client_url

  = form_actions do
    = form.button :button, type: 'submit', class: 'btn-primary' do
      = prepend_icon(:save, translate(@page.new_record? ? :create : :update, scope: 'helpers.submit', model: Page.model_name.human))
