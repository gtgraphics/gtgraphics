= render 'translation_tabs', object: fields.object, url: translation_fields_admin_pages_path(embeddable_type: fields.object.class.name)

= loader class: 'loader-large'

.tab-content#translations
  = fields.simple_fields_for :translations do |translation_fields|
    = render 'admin/redirections/translation_fields', fields: translation_fields

= fields.input :external, collection: [[Redirection.human_attribute_name(:external), true], [Redirection.human_attribute_name(:internal), false]], as: :radio_buttons, label: false, container_html: { class: 'col-lg-offset-2 col-lg-10' }
= fields.input :destination_url, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-10' }
= fields.association :destination_page, collection: page_sitemap_collection_for_select(Page.without(@page)), label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-10' }