= form_tag :destroy_multiple_admin_templates, method: :delete do

  = index_headline_for ::Template do
    %ul.list-inline
      %li.batch-controls
        = button_tag prepend_icon(:trash, translate('helpers.links.destroy_selected'), outline: true), class: 'btn btn-danger batch-control', data: { confirm: translate('helpers.confirmations.destroy_selected', model: Image.model_name.human(count: 2)) }
      %li= create_button_link_for ::Template, namespace: :admin

  - if @templates.any? 
    = render 'table', checkboxes: true
  - else
    .well.text-center
      %h4= translate('views.hints.empty', model: (@template_class.present? ? @template_class : ::Template).model_name.human(count: 2))