= simple_form_for [:admin, @template.becomes(::Template)], html: { class: 'form-horizontal' } do |form|

  = form.input :name, input_html: { autofocus: true }
  = form.input :description, input_html: { class: 'simple-editor' }

  %fieldset
    %legend= translate('views.forms.settings')
    .fields
      - if @template.new_record?
        = form.input :type, collection: template_types_for_select
      #template_file_name_container
        = render 'files_fields', fields: form if @template.type.present?

  %fieldset
    %legend= ::Template::RegionDefinition.model_name.human(count: 2)
    .fields
      = form.input :region_labels, input_html: { class: 'space-tokenizer' }

  = form_actions do
    = form.button :button, type: 'submit', class: 'btn-primary' do
      = prepend_icon(:save, translate(@template.new_record? ? :create : :update, scope: 'helpers.submit', model: ::Template.model_name.human))
    = cancel_button [:admin, @template.becomes(::Template)]