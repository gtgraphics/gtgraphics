- present @template, with: Admin::TemplatePresenter do |template|  
  .col-sm-offset-2.col-sm-8

    = page_header do
      = template.action_buttons except: :show

    - if template.description?
      %fieldset
        %legend= template.caption_for :description
        .fields
          = template.description

    %fieldset
      %legend Informationen
      %dl.dl-horizontal
        = template.list_item :type
        = template.list_item :file_name
        = template.list_item :updated_at
        = template.list_item :usage

    %fieldset
      %legend= ::Template::RegionDefinition.model_name.human(count: 2)
      .fields
        - if @region_definitions.any?
          %table.table.table-hover
            %thead
              %tr
                %th= ::Template::RegionDefinition.human_attribute_name :name
                %th= ::Template::RegionDefinition.human_attribute_name :label
                %th.actions
            %tbody#region_definitions
              - @region_definitions.each do |region_definition|
                = content_tag_for :tr, region_definition do
                  = render region_definition
        - else
          .well.text-center
            %h4= translate('views.hints.empty', model: ::Template::RegionDefinition.model_name.human(count: 2))

        .btn-toolbar
          = button_link_to prepend_icon(:plus, translate('helpers.links.new', model: ::Template::RegionDefinition.model_name.human(count: 2))), [:new, :admin, @template.becomes(::Template), :region_definition], type: :success, remote: true