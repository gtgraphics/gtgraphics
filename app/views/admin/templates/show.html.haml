= view_headline_for @template.becomes(::Template) do
  = action_buttons_for @template.becomes(::Template), except: :show

.row
  .col-lg-8
    - if @template.description_html.present?
      %h3= ::Template.human_attribute_name :description
      .content
        = @template.description_html

    %h3= RegionDefinition.model_name.human(count: 2)
    .content
      = render 'admin/region_definitions/table'
      = create_button_link_for RegionDefinition, namespace: :admin, parent: @template.becomes(::Template)

  .col-lg-4

    - if @template.screenshot.present?
      .panel.panel-default
        .panel-heading
          %h3.panel-title Screenshot

        = link_to @template.screenshot.url, target: '_blank' do
          = image_tag @template.screenshot.url(:preview), alt: @template.name, class: 'img-responsive'

    .panel.panel-default
      .panel-heading
        %h3.panel-title= translate('views.admin.templates.headlines.details')
      .panel-body
        / Details
        %dl.dl-horizontal
          %dt= ::Template.human_attribute_name :type
          %dd= link_to @template.class.model_name.human, admin_templates_path(type: @template.type.demodulize)
          %dt= ::Template.human_attribute_name :file_name
          %dd= @template.file_name
          %dt= ::Template.human_attribute_name :updated_at
          %dd= time_ago @template.updated_at
