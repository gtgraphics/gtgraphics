= view_headline_for @template.becomes(::Template) do
  = action_buttons_for @template.becomes(::Template), except: :show

.row
  .col-lg-8
    - if @template.description.present?
      %h3= ::Template.human_attribute_name :description
      .content
        = @template.description

  .col-lg-4

    .panel.panel-default
      .panel-heading
        %h3.panel-title= translate('views.admin.templates.headlines.details')
      .panel-body
        / Details
        %dl.dl-horizontal
          %dt= ::Template.human_attribute_name :type
          %dd= link_to @template.class.model_name.human, admin_templates_path(type: @template.type.demodulize)
          %dt= ::Template.human_attribute_name :file_name
          %dd= @template.file_name
          - if @template.region_definitions.any?
            %dt= ::Template.human_attribute_name :region_labels
            %dd= @template.region_definitions.pluck(:label).map { |label| content_tag(:code, label) }.join(', ').html_safe
          %dt= ::Template.human_attribute_name :updated_at
          %dd= time_ago @template.updated_at