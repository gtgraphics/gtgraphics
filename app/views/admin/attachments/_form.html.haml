= simple_form_for [:admin, @attachment], html: { class: 'form-horizontal' } do |form|

  .form-group
    %label.control-label.col-sm-3
      = Attachment.human_attribute_name :original_filename
    .col-sm-9
      .form-control-static
        = link_to @attachment.original_filename, [:download, :admin, @attachment]

  = form.input :title
  = form.input :description, input_html: { class: 'attachment-editor', rows: 6 }
  = form.association :author, as: :radio_buttons, wrapper: :horizontal_radio_and_checkboxes

  = form_actions do
    = form.button :button, type: 'submit', class: 'btn-primary' do
      = prepend_icon :save, translate(@attachment.new_record? ? :create : :update, scope: 'helpers.submit', model: Page.model_name.human)
    = button_link_to translate('helpers.links.cancel'), :admin_attachments