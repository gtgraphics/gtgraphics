= simple_form_for [:admin, @attachment], html: { class: 'form-horizontal' } do |form|

  .gtg-admin-toolbar
    #toolbar.container
      = render 'breadcrumbs'
      .btn-toolbar.pull-right
        .btn-group
          = button_link_to translate('helpers.links.cancel'), [:admin, @attachment]
        .btn-group
          = form.button :submit, class: 'btn-primary'

  = translation_manager_for form, url: translation_fields_admin_attachments_path

  = form.input :asset, required: true, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }, input_html: { preview_version: :thumbnail }
  = form.association :author, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }
