= simple_form_for [:admin, @attachment], html: { class: 'form-horizontal' } do |form|

  = render 'translation_tabs', object: form.object, url: translation_fields_admin_attachments_path

  = loader class: 'loader-large'

  .tab-content#translations
    = form.simple_fields_for :translations do |translation_fields|
      = render 'translation_fields', fields: translation_fields

  = form.input :asset, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }, input_html: { preview_version: :thumbnail }

  .form-group
    .col-lg-10.col-lg-offset-2
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), [:admin, @attachment]