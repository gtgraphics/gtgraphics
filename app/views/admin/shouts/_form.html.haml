= simple_form_for [:admin, @shout], html: { class: 'form-horizontal' } do |form|

  = form.input :nickname, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }
  = form.input :message, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }, input_html: { rows: 4 }
  = form.input :x, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-2' }
  = form.input :y, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-2' }

  .form-group.form-actions
    .col-lg-10.col-offset-2
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), :admin_shouts