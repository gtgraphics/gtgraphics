= form_tag :destroy_multiple_admin_snippets, method: :delete do

  = page_header do
    .btn-toolbar
      .btn-group.batch-control
        = button_tag prepend_icon(:trash, translate('helpers.links.destroy_selected'), outline: true), class: 'btn btn-danger batch-control', data: { confirm: translate('helpers.confirmations.destroy_selected', model: Snippet.model_name.human(count: 2)) }
      .btn-group
        = create_button_link_for Snippet, namespace: :admin

  - if @snippets.any?
    = render 'table', checkboxes: true
  - else
    .well.text-center
      %h4= translate('views.hints.empty', model: Snippet.model_name.human(count: 2))