- snippets ||= @snippets
- actions = true if actions.nil?
- checkboxes = false if checkboxes.nil?

- if checkboxes
  = hidden_field_tag 'snippet_ids[]', '', id: nil

%table.table.table-hover
  %thead
    %tr
      - if checkboxes
        %th.checkbox-cell
          %input{type: 'checkbox', class: 'only-js table-checkbox-all'}
      %th= sort_link_for snippets, :name
      %th= sort_link_for snippets, :updated_at
      - if actions
        %th.actions
  %tbody
    - snippets.each do |snippet|
      = render 'snippet', snippet: decorate(snippet, with: Admin::SnippetDecorator), checkbox: checkboxes, actions: actions

= paginate snippets