.row
  .col-sm-offset-1.col-sm-10.col-md-offset-4.col-md-4

    .page-header
      %h1.text-center= translate('views.admin.users.headlines.sign_in')

    = simple_form_for @user_login_form, as: :session, url: :admin_login, wrapper: :dialog_form do |form|

      = render_base_errors(form.object)

      = form.input :login, autofocus: true, placeholder: Admin::User::LoginForm.human_attribute_name(:login), input_html: { class: 'input-lg', autocomplete: 'off' }
      = form.input :password, placeholder: Admin::User::LoginForm.human_attribute_name(:password), input_html: { class: 'input-lg' }
      = form.input :permanent, as: :boolean, wrapper: :vertical_boolean

      .form-group
        = form.button :button, translate('views.admin.users.sign_in'), class: 'btn-primary btn-block btn-lg'
