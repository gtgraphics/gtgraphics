= view_headline_for @image do
  %ul.list-inline
    %li= button_link_to prepend_icon(:download, translate('helpers.links.download')), [:download, :admin, @image], size: :large, type: :success
    %li= button_link_to prepend_icon(:hand, translate('helpers.links.move_to', model: Attachment.model_name.human(count: 2)), direction: :right, outline: true), [:move_to_attachments, :admin, @image], method: :patch, size: :large, data: { confirm: translate('helpers.confirmations.move', model: Image.model_name.human, other_model: Attachment.model_name.human(count: 2)) }
    %li= action_buttons_for @image, except: :show

.row
  .col-lg-8
    .content
      %p
        .thumbnail
          .actions.bottom.right
            .btn-toolbar
              = button_link_to prepend_icon(:crop, translate('helpers.links.crop')), [:crop, :admin, @image]
          = link_to @image.asset.url(:original_cropped), target: '_blank' do
            = image_tag(@image.asset.url(:preview), class: 'img-responsive', alt: @image.title)

    %h3= Image::Style.model_name.human(count: 2)
    .content
      = render 'admin/image_styles/table'
      = create_button_link_for Image::Style, url: [:new, :admin, @image, :style]

  .col-lg-4
    - if @image.description_html.present?
      .panel.panel-default
        .panel-heading
          %h3.panel-title= Image.human_attribute_name :description
        .panel-body
          = @image.description_html

    .panel.panel-default
      .panel-heading
        %h3.panel-title= translate('views.admin.images.headlines.details')
      .panel-body
        %dl.dl-horizontal
          %dt= Image.human_attribute_name(:content_type)
          %dd= @image.human_content_type
          %dt= Image.human_attribute_name(:file_size)
          %dd= number_to_human_size @image.file_size
          %dt= Image.human_attribute_name(:dimensions)
          %dd
            #{@image.width} &times; #{@image.height} #{translate('helpers.units.pixels')}
            - if @image.cropped?
              (#{@image.crop_width} &times; #{@image.crop_height} #{translate('helpers.units.pixels')})
          - if @image.author
            %dt= Image.human_attribute_name(:author)
            %dd= link_to @image.author_name, [:admin, @image.author]
          %dt= Image.human_attribute_name(:updated_at)
          %dd= time_ago @image.updated_at