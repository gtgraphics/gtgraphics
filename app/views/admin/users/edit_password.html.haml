.page-header
  %h1= translate(:edit_password, scope: ['views.admin', controller_name == 'accounts' ? :account : :users, :headlines])

= simple_form_for [:admin, @user], url: controller_name == 'accounts' ? :update_password_admin_account : :update_password_admin_user, html: { class: 'form-horizontal' } do |form|

  = form.input :current_password, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' } if @user.current?
  = render 'admin/users/password_fields', fields: form

  .form-group
    .col-lg-offset-2.col-lg-10
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), controller_name == 'accounts' ? :admin_account : :admin_users