= simple_form_for @change_password_activity, as: :user, method: :patch, url: controller_name == 'accounts' ? :update_password_admin_account : :update_password_admin_user, html: { class: 'form-horizontal' } do |form|

  = toolbar do
    .btn-group
      = form.button :button, type: 'submit', class: 'btn-primary' do
        = prepend_icon(:save, translate(@user.new_record? ? :create : :update, scope: 'helpers.submit', model: User.model_name.human))

  = form.input :current_password, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' } if @user.current?
  = render 'admin/users/password_fields', fields: form