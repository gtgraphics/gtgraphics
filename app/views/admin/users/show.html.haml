= view_headline_for @user do
  - if controller_name == 'accounts'
    = action_buttons_for :account, except: :show, model: translate('views.admin.account.account')
  - else
    = action_buttons_for @user, except: :show

.row

  .col-lg-3
    = gravatar_image_tag @user.email, size: 263, default: :mm, alt: @user.full_name, class: 'img-circle loader-large', style: 'width: 263px; height: 263px;'

  .col-lg-9
    %dl.dl-horizontal
      %dt= User.human_attribute_name :first_name
      %dd= @user.first_name
      %dt= User.human_attribute_name :last_name
      %dd= @user.last_name
      %dt= User.human_attribute_name :email
      %dd= mail_to @user.email
      %dt= User.human_attribute_name :preferred_locale
      %dd= @user.preferred_locale_name || translate('helpers.prompts.custom')
