= simple_form_for [:admin, @page_template], html: { class: 'form-horizontal' } do |form|

  = form.input :name, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }
  = form.input :description, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }, input_html: { rows: 3 }
  = form.input :file_name, collection: Page::Template.unassigned_template_files, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }
  = form.input :screenshot, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }
  = form.input :active, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-4' }

  .form-group
    .col-lg-offset-2.col-lg-10
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), :admin_shouts