= simple_form_for [:admin, @project], html: { class: 'form-horizontal' } do |form|

  = form.input :title, input_html: { autofocus: true }
  = form.input :description, input_html: { class: 'simple-editor', rows: 7 }

  = form_actions do
    = form.button :button, type: 'submit', class: 'btn-primary' do
      = prepend_icon :save, translate(@project.new_record? ? :create : :update, scope: 'helpers.submit', model: Project.model_name.human)
    = cancel_button [:admin, @project]