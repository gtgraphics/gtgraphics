= simple_form_for [:admin, @project], remote: true, html: { class: 'form-horizontal' } do |form|

  .modal-body
    = form.input :title, input_html: { autofocus: true }
    = form.input :url
    = form.input :client_name, as: :client_select
    = form.input :released_in, collection: Date.today.year.downto(2005)

  .modal-footer
    = form.button :button, name: 'save', type: 'submit', class: 'btn-primary' do
      = prepend_icon :save, translate('helpers.links.save'), scope: 'helpers.submit', model: Image.model_name.human
    = button_tag translate('helpers.links.close'), type: 'button', class: 'btn btn-default', data: { dismiss: 'modal' }