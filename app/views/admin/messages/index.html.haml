= form_tag :destroy_multiple_admin_messages, method: :delete do

  = index_headline_for Message do
    %ul.list-inline
      %li.batch-controls
        = button_tag prepend_icon(:trash, translate('helpers.links.destroy_selected'), outline: true), class: 'btn btn-danger batch-control', data: { confirm: translate('helpers.confirmations.destroy_selected', model: Message.model_name.human(count: 2)) }

  - if @messages.any?
    = render 'table', checkboxes: true
  - else
    .well.text-center
      %h4= translate('views.hints.empty', model: Message.model_name.human(count: 2))