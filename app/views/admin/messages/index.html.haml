= form_tag :destroy_multiple_admin_messages, method: :delete do

  = page_header do
    .btn-group.batch-control
      = button_tag class: 'btn btn-danger batch-control', data: { confirm: translate('helpers.confirmations.destroy_selected', model: Message.model_name.human(count: 2)) } do
        = prepend_icon :trash, translate('helpers.links.destroy_selected'), outline: true

  - if @message_recipiences.any?
    = render 'table', checkboxes: true
  - else
    .well.text-center
      = translate('views.hints.empty', model: Message.model_name.human(count: 2))