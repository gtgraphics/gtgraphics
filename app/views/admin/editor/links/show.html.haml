- content_for :title do
  = translate('helpers.titles.new', model: Editor::Link.model_name.human)

- content_for :body_content do
  = simple_form_for [:admin, @editor_link], url: admin_editor_link_path, method: :patch, remote: true, html: { class: 'form-horizontal' } do |form|

    .modal-body
      = form.input :target, as: :hidden
      .editor-fields
        = render 'fields', fields: form
        
    .modal-footer
      = form.button :submit, class: 'btn-primary'
      = button_tag translate('helpers.links.close'), type: 'button', class: 'btn btn-default', data: { dismiss: 'modal' }

