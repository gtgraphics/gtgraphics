- content_for :title do
  = translate(@image.persisted? ? :edit : :new, scope: 'helpers.titles', model: Editor::Image.model_name.human)

= simple_form_for [:admin, @image], url: :admin_editor_image, wrappers: :horizontal_form, html: { class: 'form-horizontal editor-form' } do |form|

  .modal-body
    = form.input :external, collection: { Editor::Image.human_attribute_name(:internal) => false, Editor::Image.human_attribute_name(:external) => true }, as: :radio_buttons, label: Editor::Image.human_attribute_name(:source), required: true, wrapper: :horizontal_radio_and_checkboxes
    .editor-internal-image-fields
      = form.input :image_id, required: true, as: :image_select, input_html: { data: { from: admin_images_path(include_styles: true, format: :json) } }
      = form.input :style_id, as: :select, collection: [], include_blank: translate('views.admin.images.original')
    .editor-external-image-fields
      = form.input :url, required: true
    = form.input :width, as: :integer, input_html: { min: 1 }
    = form.input :height, as: :integer, input_html: { min: 1 }
    = form.input :alternative_text
    = form.input :alignment, collection: Editor::Image.alignments.invert
      
  .modal-footer
    = form.button :submit, class: 'btn-primary'
    = button_tag translate('helpers.links.close'), type: 'button', class: 'btn btn-default', data: { dismiss: 'modal' }