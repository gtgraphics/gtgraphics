= fields.input :external, collection: [[Editor::Image.human_attribute_name(:internal), false], [Editor::Image.human_attribute_name(:external), true]], as: :radio_buttons, label: false, container_html: { class: 'col-lg-offset-3 col-lg-9' }

.editor-internal-image-fields
  = fields.input :image_id, collection: Image.with_translations.collect { |image| [image.title, image.id, { data: { width: image.width, height: image.height } }] }, required: true, container_html: { class: 'col-lg-9' }, label_html: { class: 'col-lg-3' }
  /= fields.input :image_style, collection: Image.attachment_definitions[:asset][:styles].keys.collect { |style| [style, style] }, container_html: { class: 'col-lg-9' }, label_html: { class: 'col-lg-3' }

.editor-external-image-fields
  = fields.input :url, required: true, container_html: { class: 'col-lg-9' }, label_html: { class: 'col-lg-3' }

= fields.input :width, container_html: { class: 'col-lg-4' }, label_html: { class: 'col-lg-3' }
= fields.input :height, container_html: { class: 'col-lg-4' }, label_html: { class: 'col-lg-3' }
= fields.input :alternative_text, container_html: { class: 'col-lg-9' }, label_html: { class: 'col-lg-3' }