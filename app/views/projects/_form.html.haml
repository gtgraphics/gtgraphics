= form_for @project do |f|
  - if @project.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :portfolio
    = f.text_field :portfolio
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :client
    = f.text_field :client
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
