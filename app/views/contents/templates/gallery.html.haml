.page-header
  %h1= page.title

- page.children.images.preload(embeddable: :image).with_translations_for_current_locale.each_slice(4) do |child_pages|
  .row
    - child_pages.each do |child_page|
      .col-lg-3
        = link_to child_page, class: 'thumbnail' do
          = image_tag attachment_url(child_page.embeddable.image, :thumbnail), class: 'img-responsive'
          .caption
            %h3= child_page.title
