!!!
%html{lang: I18n.locale}

  %head
    %title
      = (["GT Graphics"] + breadcrumbs.collect(&:caption).drop(1)).join(' &middot; ').html_safe

    = stylesheet_link_tag 'application', media: 'all', data: { turbolinks_track: true }
    - if admin_context?
      = stylesheet_link_tag 'admin', media: 'all', data: { turbolinks_track: true }    
    = yield :stylesheets

    = i18n_javascript
    = javascript_include_tag 'application', data: { turbolinks_track: true }
    - if admin_context?
      = javascript_include_tag 'admin', data: { turbolinks_track: true }
    = yield :javascripts

    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'}
    = yield :head

  %body{class: "controller-#{controller_name} action-#{action_name}" + (admin_context? ? ' admin' : ''), data: { locale: I18n.locale }}
    - if content_for? :content
      = yield :content
    - else 
      = yield
