- content_for :body_id, 'page_editor'

- content_for :navigation_toolbar do
  .btn-toolbar
    .btn-group
      = button_link_to [:edit, :admin, @page], type: :primary, class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
        = prepend_icon(:bars, 'Menü', fixed_width: true, caption_html: { class: 'sr-only' })
      %ul.dropdown-menu
        %li= link_to prepend_icon(:eye, translate('helpers.links.view'), fixed_width: true), page_path(@page)
        %li= link_to prepend_icon(:times, translate('helpers.links.close'), fixed_width: true), [:edit, :admin, @page]

    .divider

    .btn-group.js-only
      = text_field_tag :page, @page.id, id: 'page_editor_switcher', class: 'resource-combobox', style: 'width: 200px', data: { resource: 'pages', from: admin_pages_path(locale: @page_locale, format: :json), formatter: 'PageComboboxFormatter', placeholder: 'Seite auswählen' }

    .btn-group
      = button_link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
        = prepend_flag_icon(@page_locale, translate(@page_locale, scope: :languages), fixed_width: true, caption_html: { class: 'sr-only' })
      %ul.dropdown-menu
        - available_locales.each do |locale|
          = active_link_to admin_page_editor_path(@page, page_locale: locale), wrap_tag: :li do
            = prepend_flag_icon(locale, translate(locale, scope: :languages))

    .divider

    #editor_controls.editor-controls



= render template: 'layouts/admin/application'