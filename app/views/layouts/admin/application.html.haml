!!!
%html{lang: I18n.locale}

  %head
    %title
      = (["GT Graphics Administration"] + breadcrumbs.collect(&:caption).drop(1)).join(' &middot; ').html_safe
    = stylesheet_link_tag 'admin', media: 'all', data: { turbolinks_track: true }
    = yield :stylesheets
    = i18n_javascript
    = javascript_include_tag 'admin', data: { turbolinks_track: true }
    = yield :javascripts
    = csrf_meta_tags
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no'}

  %body
    %nav.navbar.navbar-default.navbar-fixed-top.navbar-inverse{role: 'navigation'}
      .container

        .navbar-header
          - if signed_in?
            %button.navbar-toggle{type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' }}
              %span.sr-only Toggle Navigation
              = icon(:reorder)

          = link_to :admin_root, class: 'navbar-brand' do
            GT Graphics

        - if signed_in?
          .navbar-collapse.collapse
            %ul.nav.navbar-nav

              = active_link_to :admin_pages, wrap_tag: :li do
                = Page.model_name.human(count: 2)
                .badge= Page.count

              = active_link_to :admin_templates, wrap_tag: :li do
                = ::Template.model_name.human(count: 2)
                .badge= ::Template.count

              = active_link_to :admin_images, wrap_tag: :li do
                = Image.model_name.human(count: 2)
                .badge= Image.count

              = active_link_to :admin_attachments, wrap_tag: :li do
                = Attachment.model_name.human(count: 2)
                .badge= Attachment.count

              = active_link_to :admin_users, wrap_tag: :li do
                = User.model_name.human(count: 2)

            %ul.list-inline.navbar-text.pull-right
              %li= active_link_to prepend_icon(:user, current_user.name), :admin_account, class: 'navbar-link'
              %li= link_to prepend_icon(:sign_out, translate('helpers.links.sign_out')), :admin_sign_out, class: 'navbar-link', method: :delete, data: { confirm: translate('helpers.confirmations.sign_out') }
        
    .container
      = render 'breadcrumbs'
      
      = render_flash(flash.notice, type: :success)
      = render_flash(flash.alert, type: :danger)

      #page_content
        = yield