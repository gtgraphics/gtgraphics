- content_for :social_meta_tags do
  %meta{property: 'og:title', content: @project.title}
  %meta{property: 'og:description', content: strip_tags(@project.description || '').presence || @page.meta_description || ''}
  - @project.images.each do |image|
    %meta{property: 'og:image', content: image_asset_url(image, :social)}
    %meta{property: 'og:image:type', content: image.content_type}
    %meta{property: 'og:image:width', content: 1500}
    %meta{property: 'og:image:height', content: 1500}

- content_for :page_content do
  - if content_for? :project_content
    = yield :project_content
  - else
    = yield

= render template: 'layouts/page/contents'
