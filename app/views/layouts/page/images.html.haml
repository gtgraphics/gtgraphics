- content_for :social_meta_tags do
  %meta{property: 'og:description', content: strip_tags(@image.description || '').presence || @page.meta_description || ''}
  %meta{property: 'og:image', content: image_asset_url(@image, :social)}
  %meta{property: 'og:image:type', content: @image.content_type}
  %meta{property: 'og:image:width', content: 1500}
  %meta{property: 'og:image:height', content: 1500}
  %link{rel: 'image_src', href: image_asset_url(@image, :social)}

- content_for :page_content do
  - if content_for? :image_content
    = yield :image_content
  - else
    = yield

= render template: 'layouts/page/application'
