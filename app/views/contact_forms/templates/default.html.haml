.page-header
  %h1= page.title

= simple_form_for @message, url: contact_form_path(@contact_form), html: { class: 'form-horizontal' } do |form|

  = form.input :first_sender_name, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }
  = form.input :last_sender_name, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }
  = form.input :sender_email, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-6' }
  = form.input :subject, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }
  = form.input :body, input_html: { rows: 8 }, label_html: { class: 'col-lg-2' }, container_html: { class: 'col-lg-8' }

  .form-group
    .col-lg-10.col-lg-offset-2
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), page_path(@page)