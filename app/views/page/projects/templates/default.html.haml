- present @project do |project|

  = render 'breadcrumbs'

  .page-header
    %h1= project.title

  .page-body

    .info-bar
      .row
        .col-md-9
          %ul.list-info-bar
            - if project.client.present?
              %li.client
                = link_to_if project.client.website_url.present?, prepend_icon(:user, project.client, fixed_width: true), project.client.website_url
            - if project.project_type.present?
              %li.project-type
                = prepend_icon :tag, project.project_type, fixed_width: true
            - if project.released_in.present?
              %li.release-date
                = prepend_icon :clock, project.released_in, outline: true, fixed_width: true

        .col-md-3
          - if project.url.present?
            / Project Link
            = button_link_to project.url, as: :primary, block: true, size: :lg, target: '_blank' do
              = append_icon :external_link, 'Zum Projekt', style: :square, fixed_width: true


    .row
      .col-md-9
        - present_collection(@images).each do |image|
          %figure.thumbnail.project-thumbnail
            = image_tag attached_asset_path(image, :public), alt: image.title, class: 'img-responsive img-emerging'
            - if image.description.present?
              %figcaption.caption
                = image.description

      .col-md-3
        .content
          = project.author.thumbnail
          = project.author.name

        - if project.description.present?
          .content
            = project.description
