#slider.carousel.fullscreen-carousel.slide{data: { ride: 'carousel', interval: 3000, pause: 'false', keyboard: 'false' }}
  %ol.carousel-indicators
    %li.active{data: { target: '#slider', slide_to: 0 }}
    %li{data: { target: '#slider', slide_to: 1 }}
    %li{data: { target: '#slider', slide_to: 2 }}
  .carousel-inner{role: 'listbox'}
    - 3.times do |index|
      .item{class: index.zero? ? 'active' : nil}
        = background_image_tag
        .carousel-caption
          %h3 Lorem Ipsum Dolor Sit Amet
          %p
            At vero eos et accusam et justo duo dolores et ea rebum.
            Stet clita kasd gubergren, no sea takimata sanctus est
            Lorem ipsum dolor sit amet.

  / %a.left.carousel-control{'data-slide' => 'prev', href: '#slide', role: 'button'}
  /   %span.glyphicon.glyphicon-chevron-left{'aria-hidden' => 'true'}
  /   %span.sr-only Previous
  / %a.right.carousel-control{'data-slide' => 'next', :href => '#slide', :role => 'button'}
  /   %span.glyphicon.glyphicon-chevron-right{'aria-hidden' => 'true'}
  /   %span.sr-only Next