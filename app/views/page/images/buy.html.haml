.page-header
  %h1 Buy #{@image}

= simple_form_for @message, as: :message, url: request_image_purchase_path(@page.path), html: { class: 'form-horizontal' } do |form|

  = form.input :first_sender_name
  = form.input :last_sender_name
  = form.input :sender_email

  .form-group
    %label.control-label.col-sm-3
      = Image.model_name.human
    .col-sm-9
      .form-control-static
        .pull-left
          = link_to @page do
            = image_tag attached_asset_path(@image, :thumbnail), class: 'img-responsive img-circle', width: 75, height: 75
        = link_to @image.title, @page


  = form.input :body, input_html: { rows: 8 }

  .form-group
    .col-sm-9.col-sm-offset-3
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), page_path(@page)