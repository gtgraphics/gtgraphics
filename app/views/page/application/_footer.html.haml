%footer#footer.hidden-xs

  %nav.navbar.navbar-footer{role: 'navigation'}
    / Facebook Like Button
    .navbar-text.social-buttons.site-social-buttons
      = facebook_site_like_button

    %ul.nav.navbar-nav.social-buttons
      %li
