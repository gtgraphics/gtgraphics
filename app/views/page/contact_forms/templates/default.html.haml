.page-header
  %h1= @page.title

= simple_form_for @message, as: :message, url: @page, html: { class: 'form-horizontal' } do |form|

  = form.input :first_sender_name
  = form.input :last_sender_name
  = form.input :sender_email
  = form.input :subject
  = form.input :body, input_html: { rows: 8 }

  .form-group
    .col-lg-9.col-lg-offset-3
      = form.button :submit, class: 'btn-primary'
      = button_link_to translate('helpers.links.cancel'), @page