.page-header
  %h1= page.title

.page-body
  - if region_content_for? :header
    .row
      .col-sm-12
        = yield_region :header

  .row
    - @about_pages.each do |user, page|
      .col-sm-6
        .submenu-item
          = link_to page, class: 'submenu-link' do
            .submenu-item-title
              = page.title
            = gravatar_image_tag user.email, size: 530, default: :mm, class: 'submenu-item-image', alt: page.title

  - if region_content_for? :footer
    .row
      .col-sm-12
        = yield_region :footer
