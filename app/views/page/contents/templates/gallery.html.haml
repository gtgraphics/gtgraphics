.page-header
  %h1= page.title

- @child_pages.each_slice(4) do |child_pages|
  .row
    - child_pages.each do |child_page|
      .col-lg-3
        = link_to child_page, class: 'thumbnail' do
          = image_tag attached_asset_path(child_page.embeddable.image, :thumbnail), class: 'img-responsive'
          .caption
            %h3= child_page.title
